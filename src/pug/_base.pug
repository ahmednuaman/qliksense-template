doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    meta(name='viewport' content='width=device-width initial-scale=1.0 maximum-scale=1.0 minimum-scale=1.0 user-scalable=no')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='mobile-web-app-capable' content='yes')
    meta(name='theme-color' content='#eb0000')
    meta(name='apple-mobile-web-app-status-bar-style' content='#eb0000')
    meta(name='msapplication-navbutton-color' content='#eb0000')
    meta(http-equiv='cleartype' content='on')
    link(rel='stylesheet' href=(htmlWebpackPlugin.options.production ? '/resources/autogenerated' : 'asset/css') + '/qlik-styles.css')
    link(rel='stylesheet' href=(htmlWebpackPlugin.options.production ? '${name}.css' : htmlWebpackPlugin.files.chunks[htmlWebpackPlugin.options.css].entry))
    title #{htmlWebpackPlugin.options.title}
    block head
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#') #{htmlWebpackPlugin.options.title}
        ul.nav.navbar-nav
          block menu

    block body

    script(src=(htmlWebpackPlugin.options.production ? '${name}.js' : htmlWebpackPlugin.files.chunks[htmlWebpackPlugin.options.js].entry) defer)
